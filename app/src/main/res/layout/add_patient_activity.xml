<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

   <!-- <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profile_imgv"
        android:layout_marginTop="20dp"
        android:src="@drawable/profileimage"
        android:layout_gravity="center_horizontal" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal">



        <EditText
            android:id="@+id/firstname_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorEditText"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorHint"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:hint="First Name"

            android:singleLine="true"


            android:textStyle="italic"></EditText>
        <EditText
            android:id="@+id/lasttname_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorEditText"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorHint"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:hint="Last Name"

            android:singleLine="true"


            android:textStyle="italic"></EditText>
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorEditText"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorHint"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:hint="Email Id"
            android:singleLine="true"
            android:textStyle="italic"></EditText>
        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorEditText"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorHint"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:inputType="number"
            android:hint="Phone Number"
            android:singleLine="true"
            android:textStyle="italic"></EditText>





        <EditText
            android:id="@+id/other_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorEditText"
            android:textColorHint="@color/colorHint"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_login"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="Other"
            android:visibility="gone"
            android:singleLine="true"
            android:textStyle="italic"></EditText>


        <EditText
            android:id="@+id/health_id_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:textColor="@color/colorEditText"
            android:textColorHint="@color/colorHint"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="Health ID/NHS/NHI"
            android:singleLine="true"


            android:textStyle="italic"></EditText>


        <EditText
            android:id="@+id/address_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorEditText"
            android:textColorHint="@color/colorHint"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_textfield_mobile"
            android:drawablePadding="10dp"
            android:lines="2"
            android:hint="Address"
            android:singleLine="true"


            android:textStyle="italic"></EditText>
        <EditText
            android:id="@+id/age_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:textColorHint="@color/colorHint"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorEditText"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="Age"
            android:singleLine="true"


            android:textStyle="italic"></EditText>
        <!--<EditText
            android:id="@+id/sex_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorEditText"
            android:textColorHint="@color/colorHint"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_login"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="Sex"
            android:singleLine="true"


            android:textStyle="italic"></EditText>-->
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#000000"
                android:id="@+id/radioButton"
                android:layout_gravity="center_horizontal"
                android:checked="true"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#000000"
                android:id="@+id/radioButton2"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:layout_marginLeft="15dp"
                />
        </RadioGroup>
        <EditText
            android:id="@+id/ward_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:textColorHint="@color/colorHint"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorEditText"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="Ward"
            android:singleLine="true"
            android:textStyle="italic"></EditText>

        <EditText
            android:id="@+id/room_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:textColorHint="@color/colorHint"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorEditText"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="Room"
            android:singleLine="true"
            android:textStyle="italic"></EditText>
        <EditText
            android:id="@+id/falls_history_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColorHint="@color/colorHint"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorEditText"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="Falls History"
            android:singleLine="true"
            android:textStyle="italic"></EditText>
        <EditText
            android:id="@+id/pcp_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColorHint="@color/colorHint"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorEditText"
            android:background="@drawable/edittext_login1"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="PCP/GP Details"
            android:singleLine="true"
            android:textStyle="italic"></EditText>


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/register_button_background"
        android:text="Add"
        android:textColor="#000000"
        android:id="@+id/add_btn"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>

</ScrollView>