<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#091022">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:hint="Heart Rate"
            android:gravity="center_horizontal"
            android:textColorHint="#949494"
            android:inputType="number"
            android:background="@drawable/submit_button"
            android:ems="10"
            android:id="@+id/hr_edit"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:hint="Oxygen Saturation "
            android:gravity="center_horizontal"
            android:textColorHint="#949494"
            android:inputType="numberDecimal"
            android:background="@drawable/submit_button"
            android:ems="10"
            android:id="@+id/os_edit"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:hint="Temperature (0C)"
            android:textColor="#FFFFFF"
            android:textColorHint="#949494"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:background="@drawable/submit_button"
            android:ems="10"
            android:id="@+id/temp_edit"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:hint="Respiration Rate (breaths per minute)"
            android:textColorHint="#949494"
            android:inputType="numberDecimal"
            android:background="@drawable/submit_button"
            android:gravity="center_horizontal"
            android:ems="10"
            android:id="@+id/resp_edit"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"

            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:hint="Systolic"
            android:textColorHint="#949494"
            android:inputType="numberDecimal"
            android:background="@drawable/submit_button"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:id="@+id/systolic_edittext"
            />

        <EditText
            android:layout_width="match_parent"

            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:hint="Diastolic"
            android:textColorHint="#949494"
            android:inputType="numberDecimal"
            android:background="@drawable/submit_button"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:id="@+id/diastolic_edittext"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Save"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:background="@drawable/register_button_background"
            android:id="@+id/saveButton"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</LinearLayout>