<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- <ImageView
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:id="@+id/profile_imgv"
             android:layout_marginTop="20dp"
             android:src="@drawable/profileimage"
             android:layout_gravity="center_horizontal" />-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal">



            <EditText
                android:id="@+id/mobile_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="phone"
                android:textColor="@color/colorEditText"
                android:layout_marginTop="15dp"
                android:textColorHint="@color/colorHint"
                android:background="@drawable/edittext_login1"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/icon_user"
                android:drawablePadding="10dp"
                android:hint="Mobile Number"
                android:textStyle="italic"></EditText>

            <EditText
                android:id="@+id/email_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/colorEditText"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/colorHint"
                android:background="@drawable/edittext_login1"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/icon_user"
                android:drawablePadding="10dp"
                android:hint="Email Id"
                android:singleLine="true"
                android:textStyle="italic"></EditText>


            <EditText
                android:id="@+id/message_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/colorEditText"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:textColorHint="@color/colorHint"
                android:background="@drawable/edittext_login1"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/icon_user"
                android:drawablePadding="10dp"
                android:hint="Message Number"
                android:singleLine="true"
                android:textStyle="italic"></EditText>



            <EditText
                android:id="@+id/other_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/colorEditText"
                android:textColorHint="@color/colorHint"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_login"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="10dp"
                android:hint="Other"
                android:visibility="gone"
                android:singleLine="true"
                android:textStyle="italic"></EditText>
            <EditText
                android:id="@+id/skype_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/colorEditText"
                android:textColorHint="@color/colorHint"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_login1"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/icon_user"
                android:drawablePadding="10dp"
                android:hint="Skype Id"
                android:singleLine="true"


                android:textStyle="italic"></EditText>



        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edittext_login1"
            android:text="Submit"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/submit_btn"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</ScrollView>